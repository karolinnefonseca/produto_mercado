    private void btnPesquisarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        String nomeProduto = PesquisarNomeProduto.getText().trim();
        this.pPesquisado = pPesquisado.PesquisarProduto(nomeProduto);
        if (pPesquisado.getDescricao()== null)
            JOptionPane.showMessageDialog(null, "Produto não encontrado");
        else {
              apresentacao.setText(pPesquisado.getApresentacao());
              codigodeBarras.setText(pPesquisado.getCodigodeBarras());
              comissao.setText(pPesquisado.getComissao() + "");
              custoOperacional.setText(pPesquisado.getCustoOperacional() + "");
              desconto.setText(pPesquisado.getDescontoConvenio()+ "");
              estoqueMax.setText(pPesquisado.getEstoqueMax() + "");
              estoqueMin.setText(pPesquisado.getEstoqueMin() + "");
        
        if (pPesquisado.getEstoqueOnline()== 1){
            rblSim.setSelected(true);
            rblNao.setSelected(false);    
          }
        else {
            rblSim.setSelected(false);
            rblNao.setSelected(true);            
        }
        margemLucro.setText(pPesquisado.getMargemLucro() + "");
        nomereduzido.setText(pPesquisado.getNomereduzido());
        if (pPesquisado.isPromocao() == true){
            rblSimPromocao.setSelected(true);
            rblNaoPromocao.setSelected(false);
        }         
        else {
            rblSimPromocao.setSelected(false);
            rblNaoPromocao.setSelected(true);
        }      
        if (pPesquisado.getTipoProduto()== 1){
            rblProduto.setSelected(true);
            rblServico.setSelected(false);
        }      
        else {
            rblProduto.setSelected(false);
            rblServico.setSelected(true);
        }
        ultimoAumento.setText(pPesquisado.getUltimoAumento());
        validadePromocao.setText(pPesquisado.getValidadePromocao()+"");
        valorCompra.setText(pPesquisado.getValorCompra()+"");
        desconto.setText(pPesquisado.getDescontoConvenio()+"");
        valoraVista.setText(pPesquisado.getValoraVista()+"");
        valorPromocao.setText(pPesquisado.getValorPromocao()+"");
        if (pPesquisado.getVendaProduto()== 1){
            rblQuantidade.setSelected(true);
            rblValor.setSelected(false);
        }
        else {rblQuantidade.setSelected(false);
        rblValor.setSelected(true);
        }
        }
       
    }                                            


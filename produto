    private void btnSairActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
    }                                       

    private void btnAlterarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        Produto pAuxiliar = new Produto();
        InsereGeral();
        pAuxiliar.RemoverProduto(this.pPesquisado.getNomereduzido());
    }                                          

    private void btnCadastrarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        try{
        Produto p = new Produto();
        p.setApresentacao(apresentacao.getText().trim());
        p.setCodigodeBarras(codigodeBarras.getText().trim());
        p.setComissao(Double.parseDouble(comissao.getText().trim()));
        p.setCustoOperacional(Double.parseDouble(custoOperacional.getText().trim()));
        p.setDescontoConvenio(Integer.parseInt(desconto.getText().trim()));
        p.setDescricao(descricao.getText().trim());
        p.setEstoqueMax(Double.parseDouble(estoqueMax.getText().trim()));
        p.setEstoqueMin (Double.parseDouble(estoqueMin.getText().trim()));
        if (rblSim.isSelected())
            p.setEstoqueOnline(1);
        else
            p.setEstoqueOnline(2);
        
        p.setMargemLucro(Double.parseDouble(margemLucro.getText().trim()));
        p.setNomereduzido(nomereduzido.getText().trim());
        
        if (rblSimPromocao.isSelected())
            p.setPromocao(true);
        else
            p.setPromocao(false);
        
        if (rblProduto.isSelected())
            p.setTipoProduto(1);
        else 
            p.setTipoProduto(0);
        
        p.InserirProduto(p);
            JOptionPane.showMessageDialog(null,"Produto cadastrado!");
            LimparCampos();
        
       }     
       catch (Exception e){
           JOptionPane.showMessageDialog(null, "Produto não cadastrado");
       }
    }                                            
       public void InsereGeral(){
       Produto p = new Produto();
        p.setApresentacao(apresentacao.getText().trim());
        p.setCodigodeBarras(codigodeBarras.getText().trim());
        p.setComissao(Double.parseDouble(comissao.getText().trim()));
        p.setCustoOperacional(Double.parseDouble(custoOperacional.getText().trim()));
        p.setDescontoConvenio(Integer.parseInt(desconto.getText().trim()));
        p.setDescricao(descricao.getText().trim());
        p.setEstoqueMax(Double.parseDouble(estoqueMax.getText().trim()));
        p.setEstoqueMin (Double.parseDouble(estoqueMin.getText().trim()));
        if (rblSim.isSelected())
            p.setEstoqueOnline(1);
        else
            p.setEstoqueOnline(2);
        
        p.setMargemLucro(Double.parseDouble(margemLucro.getText().trim()));
        p.setNomereduzido(nomereduzido.getText().trim());
        
        if (rblSimPromocao.isSelected())
            p.setPromocao(true);
        else
            p.setPromocao(false);
        
        if (rblProduto.isSelected())
            p.setTipoProduto(1);
        else 
            p.setTipoProduto(0);
        
        p.InserirProduto(p);
            JOptionPane.showMessageDialog(null,"Produto cadastrado!");
            LimparCampos();
        
       
       
       }
    private void btnListarActionPerformed(java.awt.event.ActionEvent evt) {                                          
 
         for (int i = 0; i < Produto.getListaProdutos().size(); i++) 
         {
            Produto pAux = (Produto) Produto.getListaProdutos().get(i);
             System.out.println("Nome" + pAux.getNomereduzido());
             System.out.println("Descrição:" + pAux.getDescricao());
             System.out.println("Comissão:" + pAux.getComissao());
             System.out.println("Custo Operacional:" + pAux.getCustoOperacional());
             System.out.println("Estoque Máximo:" + pAux.getEstoqueMax());
             System.out.println("Estoque Minimo:" + pAux.getEstoqueMin());
             System.out.println("Margem Lucro:" + pAux.getMargemLucro());
             System.out.println("Valor de Compra:" + pAux.getValorCompra());
             System.out.println("Valor Promocional:" + pAux.getValorPromocao());
             System.out.println("Valor a vista:" + pAux.getValoraVista());
             
        }
    }                                         

    private void btnRemoverActionPerformed(java.awt.event.ActionEvent evt) {                                           
        try {
            Produto RemoverProduto = new Produto();
            RemoverProduto.RemoverProduto(nomereduzido.getText().trim());
            JOptionPane.showMessageDialog(null, "Produto removido");
        }
        catch (Exception e){
            JOptionPane.showMessageDialog(null, "Produto não encontrado");
        }
    }                                          

